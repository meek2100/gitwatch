# .beautyshrc
# Configuration file for the Beautysh shell script formatter.

# Indentation settings, matching .editorconfig
indent-size = 2
indent-style = space

# Control where binary operators are placed
binary-next-line = true

# Indent case statements
switch-case-indent = true

# Use spaces for redirects (e.g., >&2)
space-redirects = true
