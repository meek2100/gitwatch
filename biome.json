{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "insertFinalNewline": true // Tell Biome to add a final newline
  },
  "linter": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingComma": "all"
    }
  },
  "json": {
    "formatter": {
        "trailingCommas": "none" // Biome default, aligns with Prettier
    }
  }
}