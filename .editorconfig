# This is the top-most .editorconfig file
root = true

# Global settings for all file types
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# --- Windows Scripts (CRLF) ---
# Override the global 'end_of_line = lf' setting for Windows scripts.
[*.{bat,ps1}]
end_of_line = crlf

# Shell scripts (from your original file)
[{*.sh,*.bats,*.bash}]
shell_variant      = auto
binary_next_line   = true
switch_case_indent = true
space_redirects    = true

# YAML files
[*.{yaml,yml}]
max_line_length = 90

# Markdown files
[*.md]
max_line_length = 80
