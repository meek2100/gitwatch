{
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "files.associations": {
    "*.bats": "shellscript"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "shell-format.style": "beautysh",
    "shell-format.beautysh.indentSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.rulers": [
      90
    ]
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "shellcheck.enable": true,
  "yaml.validate": true,
  "yaml.lint.enable": true,
  "hadolint.enable": true,
  "cSpell.enabled": true,
  "bats.testExplorer.paths": [
    {
      "pattern": "tests/**/*.bats",
      "exclude": [
        "tests/bats-support/**/*",
        "tests/bats-assert/**/*",
        "tests/bats-file/**/*"
      ]
    }
  ]
}
